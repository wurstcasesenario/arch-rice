#!/bin/bash

if [ "$#" -ne 1 ]; then
    echo "Use: $0 path_to_image"
    exit 1
fi

IMAGE="$1"

notify-send "Changing Theme" "Applying new Theme, Please wait..."

swww img "$IMAGE" --transition-type="center" --transition-step=1 --transition-fps="60"

wal -i "$IMAGE" -n -s -t -e

pkill waybar
waybar &

notify-send "Theme Changed" "Applyed new Theme"
